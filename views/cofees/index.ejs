
<!DOCTYPE html>
<html lang="en">
	<%- include("../partials/head.ejs") %>

	<body>
		<%- include("../partials/header.ejs") %>
		<main>
			<div class="container">
				<a href="/coffees/new"
					><button class="add">Create Coffee</button></a
				>
				<% for (coffee of coffees) { %>
				<article class="grid">
					<a href="/coffees/<%= coffee.id %>">
						<h2 class="name"><%= coffee.name %></h2>
					</a>
					<!-- <a href="/coffees/<%= coffees.id %>">
						<img class="img" src="<%= coffee.img %>" />
					</a> -->
				</article>
				<a href="/coffees/<%= coffee._id %>/edit"><button class="edit">Edit</button></a>
				<form
					action="/coffees/<%= coffee._id %>?_method=DELETE"
					method="POST">
					<input class="delete" type="submit" value="Delete" />
				</form>
			<% } %>
			</div>
		</main>
	</body>
</html>